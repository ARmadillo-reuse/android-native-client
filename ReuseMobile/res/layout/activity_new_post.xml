<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.reusemobile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:columnCount="9" >

    <EditText
        android:id="@+id/post_name"
        app:layout_column="7"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:ems="10"
        android:hint="Item Name" >

        <requestFocus />
        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/post_loc"
        app:layout_column="7"
        app:layout_gravity="left|top"
        app:layout_row="1"
        android:ems="10"
        android:hint="Item Location" >
    </EditText>

    <EditText
        android:id="@+id/post_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="7"
        app:layout_gravity="fill_horizontal|top"
        app:layout_row="2"
        android:ems="10"
        android:hint="Item Description (Optional)"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/post_tags"
        app:layout_column="7"
        app:layout_gravity="left|top"
        app:layout_row="3"
        android:ems="10"
        android:hint="Tags"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/post_button"
        app:layout_column="7"
        app:layout_gravity="center_horizontal|top"
        app:layout_row="4"
        android:onClick="post"
        android:text="Post!" />

    <TextView
        android:id="@+id/post_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="left|center_vertical"
        app:layout_row="1"
        android:text="@string/post_loc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/post_loc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="left|center_vertical"
        app:layout_row="2"
        android:text="@string/post_desc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/post_desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="left|center_vertical"
        app:layout_row="3"
        android:text="@string/post_tags"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/post_tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:text="@string/post_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</android.support.v7.widget.GridLayout>